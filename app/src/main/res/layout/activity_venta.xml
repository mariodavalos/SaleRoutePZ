<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".VentaActivity">

    <LinearLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edded2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Productitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:text="@string/cliente"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/numInterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fecha"
            android:layout_toStartOf="@+id/fecha"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/fecha"
            android:textAlignment="viewEnd"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="#edded2"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical|fill_vertical|center_horizontal"
            android:inputType="date"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:textStyle="bold">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/VentaIniTer"
        android:height="40sp"
        android:background="@color/orange">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/orange"
            android:text="@string/total"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/orange"
            android:text="@string/precio_total"
            android:textColor="@color/grey"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <ImageButton
                android:id="@+id/ButtonAbonos"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:drawable/arrow_down_float"
                android:onClick="mostrarListaAbonos"
                android:scaleType="centerInside" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listaProductos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BottomButtons"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/totales"
        android:layout_centerInParent="false"
        android:background="@color/grey"
        android:choiceMode="singleChoice"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        tools:listitem="@android:layout/simple_list_item_1" />

    <LinearLayout
        android:id="@+id/OcultoCuentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BottomButtons"
        android:layout_below="@+id/totales"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:baselineAligned="false"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ListView
            android:id="@+id/listaCuentas"
            android:layout_width="329dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:choiceMode="singleChoice"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:paddingRight="-40dp"
            tools:listitem="@android:layout/simple_list_item_1" />

        <FrameLayout
            android:id="@+id/Editar"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_weight="1">

            <EditText
                android:id="@+id/CuentaAbono"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="#827565"
                android:gravity="center_vertical|fill_vertical|center_horizontal"
                android:inputType="numberSigned|numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </FrameLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/Agregaproducto"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boton5"
        android:contentDescription="@string/todo"
        android:onClick="agregarProductoOnClick"
        android:scaleType="fitXY"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/BottomButtonsPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/BottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CanccelarVenta"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textSize="18sp"
            android:theme="@style/AppTheme" />

        <Button
            android:id="@+id/Aceptarventa"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aceptar"
            android:textSize="18sp"
            android:theme="@style/AppTheme" />
    </LinearLayout>

        <Button
            android:id="@+id/Reimprimir"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REIMPRIMIR"
            android:textSize="18sp"
            android:theme="@style/AppTheme"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/clienteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Productitulo"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/visualizar"
            android:backgroundTint="@android:color/black"
            android:scaleType="fitXY"
            android:text="" />

        <Spinner
            android:id="@+id/listaClientes"
            style="@android:style/Widget.Material.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/Productitulo"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/button2"
            android:layout_weight="30"
            android:focusable="true"
            tools:listitem="@android:layout/simple_list_item_1" />

        <Button
            android:id="@+id/buscarcliente"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Productitulo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-10dp"
            android:layout_toEndOf="@+id/listaClientes"
            android:layout_weight="1"
            android:background="?android:attr/actionModeWebSearchDrawable"
            android:contentDescription="@string/todo"
            android:onClick="buscarClienteOnClick" />

        <ImageButton
            android:id="@+id/leerCodigo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="false"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/qrcodescan"
            android:contentDescription="@string/todo"
            android:onClick="leerCodigoOnClick"
            android:scaleType="matrix" />

        <Button
            android:id="@+id/CuentaPagar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/button2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/button2"
            android:layout_toLeftOf="@+id/button2"
            android:layout_weight="1"
            android:background="@drawable/pagar"
            android:onClick="cuentasPagar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/VentaIniTer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clienteLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Iniciaventa"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="Iniciar Venta"
            android:textSize="16sp"
            android:theme="@style/AppTheme" />

        <Button
            android:id="@+id/Terminaventa"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="Terminar Venta"
            android:textSize="16sp"
            android:theme="@style/AppTheme" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Agregar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/totales"
        android:layout_gravity="top|end"
        android:layout_marginRight="-7dp"
        android:elevation="1dp">

    </FrameLayout>

    <ListView
        android:id="@+id/AbonosLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totales"
        android:background="@color/gray"
        android:visibility="gone" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/BottomButtonsPlus"
        fab:fab_colorNormal="@color/orange"
        fab:fab_colorPressed="@android:color/holo_orange_dark"
        fab:fab_icon="@drawable/plus">

    </com.getbase.floatingactionbutton.FloatingActionButton>


</RelativeLayout>