<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context=".VentaActivity">

    <TextView
        android:id="@+id/Productitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/cliente"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/numInterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listaClientes"
        android:text="@string/fecha"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/fecha"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/numInterior"
        android:background="@color/darkgrey"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:inputType="date"
        android:textColor="@color/grey"
        android:textSize="18sp">

    </EditText>

    <LinearLayout
        android:id="@+id/totales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Agregaproducto"
        android:height="40sp"
        android:background="@color/blue">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:text="@string/total"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:text="@string/precio_total"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ButtonAbonos"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/despliegue"
            android:contentDescription="@string/todo"
            android:onClick="mostrarListaAbonos" />

    </LinearLayout>

    <ListView
        android:id="@+id/listaProductos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Aceptarventa"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/totales"
        android:layout_centerInParent="false"
        android:background="@color/grey"
        android:choiceMode="singleChoice"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        tools:listitem="@android:layout/simple_list_item_1" />

    <LinearLayout
        android:id="@+id/OcultoCuentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totales"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listaCuentas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@color/grey"
            android:choiceMode="singleChoice"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            tools:listitem="@android:layout/simple_list_item_1" />


        <FrameLayout
            android:id="@+id/Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top">


            <EditText
                android:id="@+id/CuentaAbono"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/darkgrey"
                android:inputType="numberSigned|numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </FrameLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/Iniciaventa"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/numInterior"
        android:background="@drawable/llegada"
        android:contentDescription="@string/todo"
        android:onClick="entradaVentaOnClick"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/Terminaventa"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fecha"
        android:background="@drawable/salida"
        android:contentDescription="@string/todo"
        android:onClick="salidaVentaOnClick"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/Agregaproducto"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fecha"
        android:background="@drawable/boton5"
        android:contentDescription="@string/todo"
        android:onClick="agregarProductoOnClick"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/buscarcliente"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/numInterior"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/search"
        android:contentDescription="@string/todo"
        android:onClick="buscarClienteOnClick"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/Aceptarventa"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/aceptar"
        android:contentDescription="@string/todo"
        android:onClick="aceptarOnClick"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/CanccelarVenta"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/fecha"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/fecha"
        android:layout_below="@+id/listaProductos"
        android:background="@drawable/cancelar"
        android:contentDescription="@string/todo"
        android:onClick="cancelarconfirmaOnClick"
        android:scaleType="fitXY" />

    <Spinner
        android:id="@+id/listaClientes"
        style="@style/spinnerItemStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Productitulo"
        android:layout_toEndOf="@+id/buscarcliente"
        android:layout_toLeftOf="@+id/CuentaPagar"
        android:layout_toRightOf="@+id/buscarcliente"
        android:layout_toStartOf="@+id/CuentaPagar"
        android:focusable="true"
        tools:listitem="@android:layout/simple_list_item_1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/listaClientes"
        android:layout_toLeftOf="@+id/leerCodigo"
        android:layout_toStartOf="@+id/leerCodigo"
        android:background="@drawable/visualizar"
        android:onClick="visualizarClienteOnClick"
        android:scaleType="fitXY"
        android:text="" />

    <Button
        android:id="@+id/leerCodigo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button2"
        android:background="@android:drawable/btn_default_small"
        android:onClick="leerCodigoOnClick"
        android:text="@string/codigo"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="14sp" />

    <Button
        android:id="@+id/CuentaPagar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/pagar"
        android:onClick="cuentasPagar" />

    <FrameLayout
        android:id="@+id/Agregar"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totales"
        android:layout_gravity="top|end" />

    <ListView
        android:id="@+id/AbonosLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totales"
        android:background="@color/gray"
        android:visibility="gone" />



</RelativeLayout>